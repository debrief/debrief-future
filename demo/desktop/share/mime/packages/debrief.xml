<?xml version="1.0" encoding="UTF-8"?>
<mime-info xmlns="http://www.freedesktop.org/standards/shared-mime-info">
  <!-- Debrief REP file format -->
  <mime-type type="application/x-debrief-rep">
    <comment>Debrief REP file</comment>
    <comment xml:lang="en">Debrief Replay File</comment>
    <glob pattern="*.rep"/>
    <glob pattern="*.REP"/>
    <magic priority="50">
      <match type="string" offset="0" value=";;"/>
    </magic>
    <icon name="application-x-debrief"/>
    <generic-icon name="text-x-generic"/>
  </mime-type>

